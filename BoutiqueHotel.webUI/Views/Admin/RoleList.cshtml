@model IEnumerable<IdentityRole>

<h3>Role List</h3>
<hr>

<div class="row">
    <div class="col-md-2">
        @await Html.PartialAsync("_adminselect")
    </div>
    <div class="col-md-10">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <td style="width: 500px; text-align: center;">ID</td>
                    <td style="text-align: center;">Role Name</td>
                </tr>
            </thead>
            <tbody>

                @if (Model.Count() > 0)
                {
                    @foreach (var i in Model)
                    {
                        <tr>
                            <td style="text-align: center;">@i.Id</td>
                            <td style="text-align: center;">@i.Name</td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>No Roles</h3>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>
<div style="margin-top: 28em;"></div>