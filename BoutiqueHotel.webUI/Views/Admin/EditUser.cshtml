@model UserDetailsModel

<h3>Edit user</h3>
<hr>

<form action="/admin/edituser" method="POST">
    <div class="row">
        <div class="col-md-2">
            @await Html.PartialAsync("_adminselect")
        </div>
        <div class="col-md-8">

            <input type="hidden" name="UserId" value="@Model.UserId">
            <div class="mb-3">
                <label asp-for="UserName" class="form-label"></label>
                <input class="form-control" asp-for="UserName">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input class="form-control" asp-for="FirstName">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <textarea class="form-control" asp-for="LastName"></textarea>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <textarea id="editor" class="form-control" asp-for="Email"></textarea>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input class="form-control" asp-for="PhoneNumber">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="RoomNumber" class="form-label"></label>
                <input class="form-control" asp-for="RoomNumber">
                <span asp-validation-for="RoomNumber" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">SAVE CHANGES</button>

        </div>
        <div class="col-md-2">

            <h4>Roles</h4>
            @foreach (var rolename in ViewBag.Roles)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="selectedRoles" value="@rolename" id="@rolename"
                    @(Model.SelectedRoles.Any(i=>i==rolename)?"checked":"")>
                    <label class="form-check-label" for="@rolename">@rolename</label>
                </div>
            }

            <hr>

            <div class="custom-control custom-checkbox">
                <input asp-for="EmailConfirmed" type="checkbox" class="custom-control-input">
                <label asp-for="EmailConfirmed" class="custom-control-label">EmailConfirmed</label>
            </div>
        </div>
    </div>
</form>

<div style="margin-top: 7em;"></div>

@section Scripts
{
<script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
